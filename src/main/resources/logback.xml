<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>time=%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX, Etc/UTC} logLevel=%p threadName="%t" logger=%logger %X %m%n%ex</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
